<% content_for :head do %>
  <%= javascript_include_tag 'http://js.pusherapp.com/1.5/pusher.min.js' %>
  <%= javascript_include_tag '/video-js/video.js' %>
  <%= stylesheet_link_tag '/video-js/video-js.css' %>

  <script>
    var pusher = new Pusher('<%= Pusher.key %>');
    var channel = pusher.subscribe('black-sheep');
    channel.bind('chatroom', function(message) {
      alert('A message was created: ' + message.text);
    });
  </script>

  <script type="text/javascript"> 
    // Must come after the video.js library
    // Add VideoJS to all video tags on the page when the DOM is ready
    VideoJS.setupAllWhenReady();
  </script>
<% end %>

<div id="video">
  <!-- Begin VideoJS --> 
  <div class="video-js-box"> 
    <!-- Using the Video for Everybody Embed Code http://camendesign.com/code/video_for_everybody --> 
    <!-- <video id="example_video_1" class="video-js" width="640" height="506" controls="controls" preload="auto" poster="http://video-js.zencoder.com/oceans-clip.png">  -->
    <video id="example_video_1" class="video-js" width="640" height="506" controls="controls" preload="auto"> 
      <source src="http://www.archive.org/download/night_of_the_living_dead/night_of_the_living_dead.ogv" type='video/ogg; codecs="theora, vorbis"'>
      <source src="http://www.archive.org/download/night_of_the_living_dead/night_of_the_living_dead_512kb.mp4" type='video/mp4; codecs="avc1.42E01E, mp4a.40.2"'> 
      <!-- Flash Fallback. Use any flash video player here. Make sure to keep the vjs-flash-fallback class. --> 
      <object class="vjs-flash-fallback" width="640" height="506" type="application/x-shockwave-flash"
        data="http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf"> 
        <param name="movie" value="http://releases.flowplayer.org/swf/flowplayer-3.2.1.swf" /> 
        <param name="allowfullscreen" value="true" /> 
        <param name="flashvars" value='config={"playlist":["http://video-js.zencoder.com/oceans-clip.png", {"url": "http://www.archive.org/download/night_of_the_living_dead/night_of_the_living_dead_512kb.mp4","autoPlay":false,"autoBuffering":true}]}' /> 
        <!-- Image Fallback. Typically the same as the poster image. --> 
        <!-- <img src="http://video-js.zencoder.com/oceans-clip.png" width="640" height="506" alt="Poster Image"
          title="No video playback capabilities." /> -->
      </object> 
    </video> 
    <!-- Download links provided for devices that can't play video in the browser. --> 
    <p class="vjs-no-video"><strong>Download Video:</strong> 
      <a href="http://www.archive.org/download/night_of_the_living_dead/night_of_the_living_dead_512kb.mp4">MP4</a>,
      <a href="http://www.archive.org/download/night_of_the_living_dead/night_of_the_living_dead.ogv">Ogg</a><br> 
      <!-- Support VideoJS by keeping this link. --> 
      <a href="http://videojs.com">HTML5 Video Player</a> by VideoJS
    </p> 
  </div>
  <!-- End VideoJS --> 
</div>
