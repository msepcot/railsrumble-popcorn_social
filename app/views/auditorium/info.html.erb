<div id="content">
  <h1 class="search_term"><%= @video.title %></h1>
  <p class="tagline"><%= @video.tagline %></p>
  
  <div id="description">
    <%= image_tag @video.poster_path, :alt => @video.title, :class => 'poster' if @video.poster %>
    <p><%= @video.description.html_safe %></p>
  </div><br clear="all" />
</div>

<%= render :partial => 'showtimes' %>

<script>
$(function() {
  $('#description').truncate({max_length: 750});
});
</script>
